<?php if ($this->pageCount): ?>
<div class="col-sm-5">
	<div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
		Showing <?php echo $this->firstItemNumber; ?> to <?php echo $this->lastItemNumber; ?> of <?php echo $this->totalItemCount; ?> entries
	</div>
</div>
