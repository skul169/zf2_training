                         </a>
                     </li>
                 <?php else: ?>
                     <li class="active"><a href="#"><?php echo $page; ?></a></li>
                 <?php endif; ?>
             <?php endforeach; ?>

             <!-- Next page link -->
             <?php if (isset($this->next)): ?>
                <li>
                	<a href="<?php echo $this->url($this->route); ?>?page=<?php echo $this->next; ?>">
